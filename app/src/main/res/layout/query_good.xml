<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:id="@+id/button14"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="goodbacks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货品查询"
                android:id="@+id/textView12"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textIsSelectable="false" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView6"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/button14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#e6e6e6" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout21">
            <include
                android:id="@+id/relativeLayout_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                layout="@layout/bottom_state"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/relativeLayout21"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/relativeLayout"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/relativeLayout21"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="货品条码："
                    android:id="@+id/textView96"
                    android:textSize="16dp"
                    android:layout_alignTop="@+id/editText32"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/editText32"
                    android:singleLine="true"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/button45"
                    android:layout_alignLeft="@+id/textView137"
                    android:layout_alignStart="@+id/textView137" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/editText26"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_below="@+id/scrollView3"
                    android:layout_centerHorizontal="true" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="条码"
                    android:background="@drawable/normalbutton"
                    android:id="@+id/button45"
                    android:onClick="querycode"
                    android:focusable="false"
                    android:layout_alignBottom="@+id/editText32"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="编码"
                    android:background="@drawable/normalbutton"
                    android:id="@+id/button58"
                    android:onClick="querygoodscode"
                    android:focusable="false"
                    android:layout_below="@+id/editText32"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/textView137" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:id="@+id/scrollView3"

                    android:layout_below="@+id/button45"
                    android:layout_marginTop="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <com.djx.wms.anter.tags
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gridView"
                        android:layout_marginTop="52dp"
                        android:layout_alignTop="@+id/scrollView3"
                        android:layout_alignRight="@+id/button45"
                        android:layout_alignEnd="@+id/button45" />
                </ScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="商家编码："
                    android:id="@+id/textView135"
                    android:textSize="16dp"
                    android:layout_below="@+id/editText32"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="货品名称："
                    android:id="@+id/textView136"
                    android:textSize="16dp"
                    android:layout_below="@+id/textView135"
                    android:layout_alignLeft="@+id/textView135"
                    android:layout_alignStart="@+id/textView135"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView137"
                    android:textSize="16dp"
                    android:layout_alignTop="@+id/textView135"
                    android:layout_toRightOf="@+id/textView135"
                    android:layout_above="@+id/textView136"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView138"

                    android:scrollbars="vertical"
                    android:maxLines="2"

                    android:textSize="16dp"
                    android:layout_alignTop="@+id/textView136"
                    android:layout_toRightOf="@+id/textView136"
                    android:layout_alignRight="@+id/textView137"
                    android:layout_alignEnd="@+id/textView137" />



            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</LinearLayout>