<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"

            android:hint="服务器地址(192.168.0.0)"
            android:ems="10"
            android:id="@+id/config"
            android:background="@drawable/border"
            android:layout_marginTop="110dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"

            android:hint="端口"
            android:ems="10"
            android:id="@+id/configpass"

            android:background="@drawable/border"
            android:layout_below="@+id/config"
            android:layout_alignRight="@+id/config"
            android:layout_alignEnd="@+id/config"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/config"
            android:layout_alignStart="@+id/config" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保  存"
            android:id="@+id/button7"
            android:background="@drawable/button"
            android:textColor="#f3efef"
            android:onClick="sava"
            android:textSize="20dp"
            android:allowUndo="true"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/configpass"
            android:layout_alignLeft="@+id/configpass"
            android:layout_alignStart="@+id/configpass"
            android:layout_alignRight="@+id/configpass"
            android:layout_alignEnd="@+id/configpass" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返  回"
            android:id="@+id/button8"
            android:background="@drawable/disbutton"

            android:onClick="back"

            android:textSize="20dp"
            android:allowUndo="false"
            android:layout_below="@+id/button7"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignStart="@+id/button7"
            android:layout_alignRight="@+id/button7"
            android:layout_alignEnd="@+id/button7"
            android:layout_marginTop="31dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="服务器配置"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:id="@+id/imageView"
            android:layout_alignRight="@+id/config"
            android:layout_alignEnd="@+id/config"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/config"
            android:layout_alignStart="@+id/config"
            android:background="#e6e6e6"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</LinearLayout>
