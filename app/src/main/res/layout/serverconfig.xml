<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/config"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="服务器地址(192.168.0.0)"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/configpass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_alignEnd="@+id/config"
            android:layout_alignLeft="@+id/config"
            android:layout_alignRight="@+id/config"

            android:layout_alignStart="@+id/config"
            android:layout_below="@+id/config"
            android:layout_marginTop="50dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="端口"
            android:inputType="textPersonName"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/configpass"
            android:layout_alignLeft="@+id/configpass"
            android:layout_alignRight="@+id/configpass"
            android:layout_alignStart="@+id/configpass"
            android:layout_below="@+id/configpass"
            android:layout_marginTop="60dp"
            android:allowUndo="true"
            android:background="@drawable/button"
            android:onClick="sava"
            android:text="保  存"
            android:textColor="#f3efef"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button7"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignRight="@+id/button7"
            android:layout_alignStart="@+id/button7"
            android:layout_below="@+id/button7"
            android:layout_marginTop="31dp"
            android:allowUndo="false"
            android:background="@drawable/disbutton"
            android:onClick="back"
            android:text="返  回"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="服务器配置"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_alignEnd="@+id/config"
            android:layout_alignLeft="@+id/config"
            android:layout_alignRight="@+id/config"
            android:layout_alignStart="@+id/config"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dp"
            android:background="#e6e6e6"/>

    </RelativeLayout>
</LinearLayout>
