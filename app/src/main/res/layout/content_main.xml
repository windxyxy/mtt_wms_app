<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conent_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="37dp"
        android:autoText="false"
        android:text="服务器状态 ： "
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:visibility="invisible"/>


    <EditText
        android:id="@+id/user"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/border"
        android:hint="用户名/邮箱"
        android:textColor="#0e0b0b"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pass"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignRight="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/pass"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:onClick="LoginClickEvent"
        android:radius="20dp"
        android:text="登   陆"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/user"
        android:layout_below="@+id/user"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button34"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignRight="@+id/button34"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/button34"
        android:layout_marginTop="15dp"
        android:background="@drawable/disbutton"
        android:onClick="setconfigs"
        android:text="设置服务器"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_alignEnd="@+id/user"
        android:layout_alignLeft="@+id/user"
        android:layout_alignRight="@+id/user"
        android:layout_alignStart="@+id/user"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:background="#e6e6e6"/>

    <Button
        android:id="@+id/button34"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:onClick="qrcodelogin"
        android:radius="20dp"
        android:text="二维码登录"
        android:textColor="#ffffff"
        android:textSize="20dp"/>


    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.FadingCircle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/button3"
        android:layout_gravity="center"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView119"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:autoText="false"
        android:text=""
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView148"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


</RelativeLayout>
